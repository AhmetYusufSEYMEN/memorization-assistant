<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EzberArkadasim" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8BC34A</item>
        <item name="colorPrimaryDark">#689F38</item>
        <item name="colorOnPrimary">@color/primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#FFC107</item>
        <item name="colorOnSecondary">#212121</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:forceDarkAllowed">false</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
</resources>